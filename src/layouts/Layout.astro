---
export interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible&family=Roboto:wght@100&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<div class="navbar">
			<div class="container flex">
				<nav id="main-menu">
					<ul>
						<li class="nav"><h1 class='title'><span class="text-gradient"><a class="text-gradient" href="/">XeOaks</a></span></h1></li>
						<li class="nav"><h1><span class="text-gradient"><a class="text-gradient" href="/">shop</a></span></h1></li>
						<li class="nav"><h1><span class="text-gradient"><a class="text-gradient" href="/">contact</a></span></h1></li>
					</ul>
				</nav>
			</div>
		</div>
		<div class="navbar-responsive">
			<div class="container-responsive flex">
				<div id="responsive-menu">
					<ul>
						<li class="nav"><h1 class='title'><span><a href="/">XeOaks</a></span></h1></li>
						<li class="nav"><h1><span><a href="/">shop</a></span></h1></li>
						<li class="nav"><h1><span><a href="/">contact</a></span></h1></li>
					</ul>
				</div>
			</div>
		</div>
		<slot />
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap');
	html {
		background: linear-gradient(-45deg, #070602ff, #692C34ff, #2C4F77ff, #063472ff, #0E2954ff, #070602ff);
		background-size: 400% 400%;
		animation: gradient 26s ease-in-out infinite;
		height: 100vh;
		
	}

	@keyframes gradient {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	:root {
		--accent: 35, 166, 213;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #692C34ff 20%, rgba(7, 6, 2));
	}
	html {
		font-family: 'Roboto', system-ui, sans-serif;
		background-color: #e3eff3;
		text-transform: lowercase;
	}
	body {
		margin: 0;
		display: grid;
		grid-template-columns: 30% 70%;
	}
	h1 {
		font-family: 'Atkinson Hyperlegible', system-ui, sans-serif;
		font-size: 3rem;
		font-weight: 800;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	nav {
		left: 0;
		height: 94vh;
		width: 100%;
		min-width: max-content;
		background: linear-gradient(-45deg, #24242488, #78a3f388, #2C4F77ff, #063472ff, #0E2954ff, #070602ff);
		background-size: 400% 400%;
		animation: gradient 26s ease-in-out infinite;	
		padding: 1rem;
		margin: 0.5rem;
		overflow: auto;
		border-radius: 1rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.text-gradient:hover {
		animation: gradient 13s ease-in infinite;
	}
	ul {
		list-style-type: none;
		margin: 0;
		padding: 0;
		display: block;
	}
	li {
		list-style-type: none;
	}
	li a{
		display: block;
		padding: 6px;
	}
	* {
  		box-sizing: border-box;
 	 	padding: 0;
  		margin: 0
	}
	.container {
		margin: 0 auto;
		max-width: 30vw;
		min-width: 20vw;
		overflow: visible;
	}
	.container-resposive {
		margin: 0 auto;
		max-width: 100vw;
		overflow: visible;
	}
	.navbar {
		height: 100vh;
		max-width: 30vw;
		position: relative;
	}
	.navbar-responsive {
		background: linear-gradient(-45deg, #070602ff, #692C34ff, #2C4F77ff, #063472ff, #0E2954ff, #070602ff);
		background-size: 400% 400%;
		animation: gradient 26s ease-in-out infinite;	
		height: 70px;
		width: 100vw;
		padding: 0 30px;
		position: fixed;
		top: 0;
		overflow: hidden;
		display: none;
	}
	.navbar .flex {
  		display: flex;
  		justify-content: flex-start;
  		align-items: center;
  		height: 100%;
	}
	.navbar-responsive .flex {
  		display: grid;
		grid-area: header;
  		justify-content: space-between;
  		align-items: center;
  		height: 100%;
		position: absolute;
	}
	.navbar-responsive ul {
		display: flex;
		border-bottom: black;
	}
	.navbar-responsive a {
		float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: xx-large;
	}
	@media only screen and (max-width: 768px) {
		.navbar {
			display: none;
		}
		.navbar-responsive {
			display: flex;
		}
	}
</style>
